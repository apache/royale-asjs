<js:MXMLItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:local="*"
				   xmlns:models="models.*"
				   xmlns:js="library://ns.apache.org/royale/basic" 
				   >
	
	<fx:Script>
		<![CDATA[
			[Bindable]
			private var placeName:String;
			
			[Bindable]
			private var placeAddress:String;
			
			override public function set data(value:Object):void
			{
				super.data = value;
				
				placeName = value["name"];
				placeAddress = value["vicinity"];
			}
		]]>
	</fx:Script>
	
	<js:beads>
		<js:VerticalLayout />
		<js:MXMLBeadViewDataBinding />
	</js:beads>
	
	<js:Label text="{placeName}" className="ResultPlaceName" />
	<js:Label text="{placeAddress}" className="ResultPlaceAddress" />
	
</js:MXMLItemRenderer>
