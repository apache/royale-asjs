<js:View xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:local="*"
				xmlns:js="library://ns.apache.org/royale/basic" 
				>
	
	
	
	<fx:Style>
		@namespace js  "library://ns.apache.org/royale/basic";
		
		.Repeater {
			IViewport: ClassReference("org.apache.royale.html.supportClasses.Viewport");
			border: none;
			border-width: 0px;
		}
		
		.Heading1 {
			font-size: 18pt;
			font-weight: bold;
			margin-bottom: 20px;
		}
		
		.ApacheID {
			font-size: 10pt;
			color: #999999;
		}
		
		.MemberName {
			font-size: 14pt;
			font-weight: bold;
			color: #333333;
		}
		
		.MemberTitle {
			font-size: 10pt;
			font-style: italic;
			color: #333333;
		}
		
		/* social icons */
		.social {
			margin-right: 5px;
		}
	</fx:Style>
	
	<js:beads>
		<js:ViewDataBinding />
	</js:beads>
	
	
	<js:VContainer id="output" width="100%" height="100%">
		<js:Label text="Royale Team Page" className="Heading1" />
		<js:Spacer height="20" />
		
		<!-- This list does not use selections, so it has a special controller. -->
		<js:List width="100%" itemRenderer="MemberItemRenderer" className="Repeater">
			<js:beads>
				<js:HorizontalFlowLayout rowGap="100" columnGap="20" />
				<local:NoSelectionController />
				<js:SimpleBinding destinationPropertyName="dataProvider" 
								  sourceID="applicationModel" 
								  sourcePropertyName="members" 
								  eventName="membersChanged" />
			</js:beads>
		</js:List>
	</js:VContainer>
	
	
</js:View>
